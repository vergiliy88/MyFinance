<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/space_normal"
    android:paddingTop="@dimen/space_small"
    android:paddingEnd="@dimen/space_normal"
    android:paddingBottom="@dimen/space_small">

    <TextView
        android:id="@+id/label_payment_color"
        style="@style/ViewColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/label_payment_name"
        style="@style/LabelList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="шабашка по такси"
        app:layout_constraintBottom_toBottomOf="@+id/label_payment_color"
        app:layout_constraintStart_toEndOf="@+id/label_payment_color"
        app:layout_constraintTop_toTopOf="@+id/label_payment_color" />

    <ImageButton
        android:id="@+id/button_edit"
        style="@style/ButtonList"
        android:layout_width="@dimen/button_img_size"
        android:layout_height="@dimen/button_img_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_remove"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_edit_24" />

    <ImageButton
        android:id="@+id/button_remove"
        style="@style/ButtonList"
        android:layout_width="@dimen/button_img_size"
        android:layout_height="@dimen/button_img_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_delete" />
</androidx.constraintlayout.widget.ConstraintLayout>