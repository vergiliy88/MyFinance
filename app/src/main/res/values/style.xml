<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Label">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/label_color</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="LabelDialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/label_color</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:layout_marginTop">@dimen/space_normal</item>
    </style>

    <style name="Button" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_marginTop">@dimen/space_double</item>
        <item name="android:background">@drawable/border_radius</item>
        <item name="android:backgroundTint">@color/teal_200</item>
        <item name="android:paddingStart">@dimen/space_normal</item>
        <item name="android:paddingEnd">@dimen/space_normal</item>
    </style>

    <style name="ViewColor">
        <item name="android:background">@drawable/border_radius</item>
        <item name="android:backgroundTint">@color/teal_200</item>
        <item name="android:layout_width">@dimen/view_color_size</item>
        <item name="android:layout_height">@dimen/view_color_size</item>
        <item name="android:layout_marginTop">@dimen/space_small</item>
        <item name="android:layout_marginBottom">@dimen/space_small</item>
        <item name="android:layout_marginStart">@dimen/space_small</item>
    </style>

    <style name="LabelList">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/label_color</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:layout_marginStart">@dimen/space_double</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="ButtonList">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">@dimen/view_color_size</item>
        <item name="android:layout_height">@dimen/view_color_size</item>
        <item name="android:layout_marginTop">@dimen/space_small</item>
        <item name="android:layout_marginBottom">@dimen/space_small</item>
        <item name="android:layout_marginStart">@dimen/space_small</item>
        <item name="android:layout_marginEnd">@dimen/space_small</item>
    </style>

    <style name="ButtonStatistic" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_height">@dimen/view_color_size</item>
        <item name="android:layout_marginTop">@dimen/space_small</item>
        <item name="android:layout_marginBottom">@dimen/space_small</item>
        <item name="android:layout_marginStart">@dimen/space_small</item>
        <item name="android:layout_marginEnd">@dimen/space_small</item>
        <item name="android:background">@drawable/border_radius</item>
        <item name="android:backgroundTint">@color/teal_200</item>
    </style>

    <style name="InputNumber">
        <item name="android:textColor">@color/label_color</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:layout_marginStart">@dimen/space_small</item>
        <item name="android:layout_marginEnd">@dimen/space_small</item>
    </style>

    <style name="Spinner">
        <item name="android:textColor">@color/label_color</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:layout_marginEnd">@dimen/space_small</item>
    </style>

    <style name="ButtonDialogPositive" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_marginEnd">@dimen/space_double</item>
        <item name="android:layout_marginStart">@dimen/space_double</item>
        <item name="android:layout_marginBottom">@dimen/space_double</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:paddingStart">@dimen/space_small</item>
        <item name="android:paddingEnd">@dimen/space_small</item>
        <item name="android:background">@drawable/border_radius</item>
        <item name="android:backgroundTint">@color/purple_200</item>
    </style>

    <style name="ButtonDialogNegative" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:layout_marginTop">@dimen/space_large</item>
        <item name="android:layout_marginEnd">@dimen/space_double</item>
        <item name="android:layout_marginStart">@dimen/space_double</item>
        <item name="android:layout_marginBottom">@dimen/space_double</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:paddingStart">@dimen/space_small</item>
        <item name="android:background">@drawable/border_radius</item>
        <item name="android:paddingEnd">@dimen/space_small</item>
        <item name="android:backgroundTint">@android:color/holo_red_dark</item>

    </style>

    <style name="Switch">
        <item name="android:layout_marginTop">@dimen/space_double</item>
        <item name="android:layout_marginEnd">@dimen/space_double</item>
    </style>

    <style name="CardViewStyle" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">@dimen/space_small</item>
        <item name="cardElevation">@dimen/space_small</item>
        <item name="cardMaxElevation">@dimen/space_small</item>
        <item name="contentPaddingBottom">@dimen/space_small</item>
        <item name="contentPaddingTop">@dimen/space_small</item>
        <item name="contentPaddingLeft">@dimen/space_small</item>
        <item name="contentPaddingRight">@dimen/space_small</item>
    </style>
</resources>
